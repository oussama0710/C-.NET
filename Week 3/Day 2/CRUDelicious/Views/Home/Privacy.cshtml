@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>
@model Dish
<div class="text-center">
    <div class=" row text-center">
    <h1>Add Actor</h1>
    <form asp-action="CreateDish" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control"/>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="Chef"></label>
            <span asp-validation-for="Chef" class="text-danger"></span>
            <input asp-for="Chef" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Calories"></label>
            <span asp-validation-for="Calories" class="text-danger"></span>
            <input asp-for="Calories" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <select asp-for="Tastiness" class="form-control">
                
                @for (int i =0;i<11;i++){
                    <option value=@i>@i/10</option>
                }
            </select>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <br>
        <input type="submit" value="Create" class="btn btn-primary">
    </form>
   </div>
   </div>
